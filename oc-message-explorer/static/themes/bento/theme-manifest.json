{
  "$schema": "https://opencode.gg/oc-message-explorer/theme-manifest.schema.json",
  "name": "Bento",
  "id": "bento",
  "version": "1.0.0",
  "author": "OpenCode Team",
  "description": "Card-based Japanese minimalist theme with colorful accents",
  "type": "light",
  "extends": "base",
  "preview": "bento.png",
  "cssVariables": {
    "bg-primary": "#f5f5f5",
    "bg-secondary": "#ffffff",
    "bg-tertiary": "#e8e8e8",
    "bg-hover": "#f0f0f0",
    "text-primary": "#1a1a1a",
    "text-secondary": "#666666",
    "text-muted": "#999999",
    "accent": "#ff6b35",
    "accent-hover": "#e55a2a",
    "border": "#e0e0e0",
    "success": "#20c997",
    "danger": "#fa5252",
    "warning": "#fd7e14"
  },
  "ui": {
    "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Helvetica, Arial, sans-serif",
    "borderRadius": "12px",
    "transitionDuration": "0.2s"
  }
}
