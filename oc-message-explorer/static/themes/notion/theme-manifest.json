{
  "$schema": "https://opencode.gg/oc-message-explorer/theme-manifest.schema.json",
  "name": "Notion",
  "id": "notion",
  "version": "1.0.0",
  "author": "OpenCode Team",
  "description": "Notion-inspired clean, minimal theme with lots of whitespace",
  "type": "light",
  "extends": "base",
  "preview": "notion.png",
  "cssVariables": {
    "bg-primary": "#ffffff",
    "bg-secondary": "#f7f6f3",
    "bg-tertiary": "#e8e6e1",
    "bg-hover": "#f0eee9",
    "text-primary": "#37352f",
    "text-secondary": "#787774",
    "text-muted": "#9b9a97",
    "accent": "#2383e2",
    "accent-hover": "#1a6fc7",
    "border": "#e8e6e1",
    "success": "#27ae60",
    "danger": "#e03e3e",
    "warning": "#d4b35a"
  },
  "ui": {
    "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', Helvetica, Arial, sans-serif",
    "borderRadius": "4px",
    "transitionDuration": "0.1s"
  }
}
